<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_color"
        tools:context=".StockTakingActivity">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:scaleType="fitXY"
            android:src="@drawable/bannerpsl"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:textColor="#0159A9"
                android:text="STOCK RECORD"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Bin Name:"
                android:textColor="@color/orange"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="1dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_grey_background"
                android:layout_height="0dp"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtBinName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:editable="false"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_grey"
                    android:digits="0123456789"
                    android:hint="Scan Bin Tag"
                    android:background="@color/white"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/rfidscan"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <LinearLayout
                android:id="@+id/llBinDetails"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:text="Pallet Name:"
                    android:textColor="@color/orange"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edittext_grey_background"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtPalletName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:editable="false"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"
                        android:digits="0123456789"
                        android:hint="Scan Pallet Tag (if avaialable)"
                        android:background="@color/white"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/rfidscan"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/emptyPalletbtn"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="No Pallet Tag"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:button="@drawable/custom_checkbox"
                    app:buttonTint="@null"
                    android:padding="10dp"
                    android:clickable="false"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Item Code:"
                    android:textColor="@color/orange"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtskuCode"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:hint="Item Code"
                        android:inputType="text"
                        android:background="@color/white"
                        android:textColorHint="@color/light_grey"
                        />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/qrcode"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Item Name:"
                    android:textColor="@color/orange"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtskuName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:editable="false"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:hint="Item Name"
                        android:textColorHint="@color/light_grey"
                        android:background="@color/white"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="Batch ID:"
                            android:textColor="@color/orange"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/batchID"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_grey"
                            android:hint="BatchID"
                            android:inputType="text"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="Quantity:"
                            android:textColor="@color/orange"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edtQty"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:padding="10dp"
                            android:hint="Add Qty"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginLeft="5dp"
                            android:inputType="numberDecimal"
                            android:gravity="center"
                            android:digits="0123456789.123"
                            android:maxLength="6"
                            android:textColorHint="@color/light_grey"
                            android:background="@drawable/edit_text_background"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/emptybinBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Empty Bin"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="15sp"
                android:button="@drawable/custom_checkbox"
                app:buttonTint="@null"
                android:padding="10dp"
                android:clickable="false"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_height="50dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/round_button_green"
                    android:layout_height="45dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_height="45dp"
                    android:background="@drawable/round_button_red"
                    android:text="Clear"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPower"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_height="45dp"
                    android:background="@drawable/round_button_green"
                    android:text="Power"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_height="45dp"
                    android:background="@drawable/round_button_red"
                    android:text="Back"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="@string/footer"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="12sp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>